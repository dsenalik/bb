        if ( $whname ) { $headername = $whname; }
        print $OUTF "track type=wiggle_0 name=\"$headername\" description=\"Coverage by $coverageby\"\n";
        print $OUTF "fixedStep chrom=\"$refhdrkeys[$i]\" start=1 step=$wspacing span=$wspacing\n";
        my $cumul = 0;
